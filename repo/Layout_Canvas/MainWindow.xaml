<Window x:Class="Layout_Canvas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Layout_Canvas"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="525" Loaded="Window_Loaded">
    <Grid>
        <Canvas Name="ControlCanvas" Background="LightYellow" Height="50" 
                VerticalAlignment="Top">
            <Button Name="RestartButton" Content="Reset" Width="50" 
                    Canvas.Left="10" Canvas.Top="10" Click="RestartButton_Click"/>
            <TextBox Name="NumShapes" Height="23" Canvas.Left="90" 
                     TextWrapping="Wrap" Text="25" Canvas.Top="10" Width="43"/>
        </Canvas>
        <Canvas Name="TopCanvas" Background="Bisque" Height="210" 
                VerticalAlignment="Top" Margin="0,50,0,0">
        </Canvas>
        <Canvas Name="BottomCanvas" Background="DarkSalmon" Height="210" 
                VerticalAlignment="Top" Margin="0,260,0,0">
        </Canvas>
    </Grid>
</Window>
