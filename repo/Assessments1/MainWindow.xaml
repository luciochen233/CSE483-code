<Window x:Class="Assessments1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assessments1"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="600">
    <Grid>
        <TextBox x:Name="Bin1" HorizontalAlignment="Left" Height="23" Margin="84,89,0,0" TextWrapping="Wrap" Text="{Binding Path=In1Text}" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Bin2" HorizontalAlignment="Left" Height="23" Margin="84,142,0,0" TextWrapping="Wrap" Text="{Binding Path=In2Text}" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Bunion" HorizontalAlignment="Left" Height="23" Margin="314,89,0,0" TextWrapping="Wrap" Text="{Binding Path=UnionText}" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Binter" HorizontalAlignment="Left" Height="23" Margin="314,142,0,0" TextWrapping="Wrap" Text="{Binding Path=InterText}" VerticalAlignment="Top" Width="120"/>
        <TextBlock x:Name="ERR" HorizontalAlignment="Left" Margin="84,282,0,0" TextWrapping="Wrap" Text="{Binding Path=ErrText}" VerticalAlignment="Top" Height="78" Width="350"/>

    </Grid>
</Window>
