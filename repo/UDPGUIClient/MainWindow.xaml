<Window x:Class="UDPGUIClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UDPGUIClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="700">
    <Grid>
        <Label Content="Message" HorizontalAlignment="Left" Margin="50,30,0,0" VerticalAlignment="Top" Width="150"/>
        <TextBox HorizontalAlignment="Left" Height="50" Margin="50,70,0,0" TextWrapping="Wrap" Text="{Binding Path=MessageBox}" VerticalAlignment="Top" Width="500"/>
        <Button Content="Send" HorizontalAlignment="Left" Margin="575,85,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Label Content="Status" HorizontalAlignment="Left" Margin="50,140,0,0" VerticalAlignment="Top" Width="150"/>
        <TextBox HorizontalAlignment="Left" Height="200" Margin="50,180,0,0" TextWrapping="Wrap" Text="{Binding Path=StatusBox}" VerticalAlignment="Top" Width="600"/>

    </Grid>
</Window>
