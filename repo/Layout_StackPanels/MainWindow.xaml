<Window x:Class="Layout_StackPanels.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Layout_StackPanels"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="250">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" Background="Red" />
        <Border Grid.Column="1" Background="Blue" />
        <TextBlock Grid.Column="0" Text="R0C0" FontSize="48"/>
        <TextBlock Grid.Column="1" Text="R0C1" FontSize="48"/>
        <StackPanel Grid.Column="0">
            <Button Content="B1"  FontSize="16" Height="25" Width="25" Margin="0,75,0,0"/>
            <Button Content="B2" FontSize="16" Height="25" Width="50"/>
            <TextBox Text="TextBox 1"/>
            <Button Content="B3" FontSize="16" Height="25" Width="75" Margin="0,10,0,0"/>
            <Button Content="B4" FontSize="16" Height="25" Width="100"/>
            <TextBox Text="TextBox 2"/>
            <TextBox Text="TextBox 3" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
