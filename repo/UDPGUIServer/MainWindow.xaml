<Window x:Class="UDPGUIServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UDPGUIServer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="700" Closing="Window_Closing">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="250" Margin="50,80,0,0" TextWrapping="Wrap" Text="{Binding Path=StatusBox}" VerticalAlignment="Top" Width="600"/>
        <Label Content="Message Received" HorizontalAlignment="Left" Margin="50,50,0,0" VerticalAlignment="Top" Width="300"/>

    </Grid>
</Window>
